<Window x:Class="StylishCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stylish Calculator" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="#FF888888"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFCCCCCC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFAAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display (Top) -->
        <TextBox x:Name="DisplayTop" Grid.Row="0" FontSize="20" TextAlignment="Right" Margin="10" Padding="10" IsReadOnly="True" Background="Transparent" BorderBrush="Transparent" Foreground="#FF888888"/>

        <!-- Display (Bottom) -->
        <TextBox x:Name="Display" Grid.Row="1" FontSize="30" TextAlignment="Right" Margin="10" Padding="10" IsReadOnly="True" Background="#FFEEEEEE" BorderBrush="#FF888888" Foreground="#FF333333"/>

        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="*"/>
              

            </Grid.ColumnDefinitions>

            <!-- Row 1 (C, x, /, and clear buttons) -->
            <Button x:Name="ButtonClear" Content="C" Grid.Row="1" Grid.Column="0" Click="ClearButton_Click"/>
            <Button x:Name="ButtonBackspace" Content="x" Grid.Row="1" Grid.Column="1" Click="BackspaceButton_Click"/>
            <Button x:Name="ButtonDivide" Content="/" Grid.Row="1" Grid.Column="2" Click="OperationButton_Click"/>
            <Button x:Name="ButtonMultiply" Content="*" Grid.Row="1" Grid.Column="3" Click="OperationButton_Click"/>

            <!-- Row 2 (Numeric buttons) -->
            <Button x:Name="Button7" Content="7" Grid.Row="2" Grid.Column="0" Click="NumberButton_Click"/>
            <Button x:Name="Button8" Content="8" Grid.Row="2" Grid.Column="1" Click="NumberButton_Click"/>
            <Button x:Name="Button9" Content="9" Grid.Row="2" Grid.Column="2" Click="NumberButton_Click"/>
            <Button x:Name="ButtonSubtract" Content="-" Grid.Row="2" Grid.Column="3" Click="OperationButton_Click"/>

            <!-- Row 3 (Numeric buttons) -->
            <Button x:Name="Button4" Content="4" Grid.Row="3" Grid.Column="0" Click="NumberButton_Click"/>
            <Button x:Name="Button5" Content="5" Grid.Row="3" Grid.Column="1" Click="NumberButton_Click"/>
            <Button x:Name="Button6" Content="6" Grid.Row="3" Grid.Column="2" Click="NumberButton_Click"/>
            <Button x:Name="ButtonAdd" Content="+" Grid.Row="3" Grid.Column="3" Click="OperationButton_Click"/>

            <!-- Row 4 (Numeric buttons) -->
            <Button x:Name="Button1" Content="1" Grid.Row="4" Grid.Column="0" Click="NumberButton_Click"/>
            <Button x:Name="Button2" Content="2" Grid.Row="4" Grid.Column="1" Click="NumberButton_Click"/>
            <Button x:Name="Button3" Content="3" Grid.Row="4" Grid.Column="2" Click="NumberButton_Click"/>
            <Button x:Name="ButtonEquals" Content="=" Grid.Row="4" Grid.Column="3" Click="EqualsButton_Click"/>

            <!-- Row 5 (Numeric buttons) -->
            <Button x:Name="Button0" Content="0" Grid.Row="5" Grid.Column="0" Click="NumberButton_Click"/>
            <Button x:Name="ButtonDecimal" Content="." Grid.Row="5" Grid.Column="1" Click="NumberButton_Click"/>

            <!-- Row 6 (Additional function buttons) -->
            <Button x:Name="ButtonPower" Content="^" Grid.Row="6" Grid.Column="0" Click="PowerButton_Click"/>
            <Button x:Name="ButtonSqrt" Content="√" Grid.Row="6" Grid.Column="1" Click="SqrtButton_Click"/>
            <Button x:Name="ButtonCos" Content="cos" Grid.Row="6" Grid.Column="2" Click="TrigButton_Click"/>
            <Button x:Name="ButtonSin" Content="sin" Grid.Row="6" Grid.Column="3" Click="TrigButton_Click"/>
            <Button x:Name="ButtonTan" Content="tan" Grid.Row="5" Grid.Column="2" Click="TrigButton_Click"/>
            <Button x:Name="ButtonCtg" Content="ctg" Grid.Row="5" Grid.Column="3" Click="TrigButton_Click"/>
            <Button x:Name="ButtonOpenParenthesis" Content="(" Grid.Row="7" Grid.Column="0" Click="ParenthesisButton_Click"/>
            <Button x:Name="ButtonCloseParenthesis" Content=")" Grid.Row="7" Grid.Column="1" Click="ParenthesisButton_Click"/>
            <Button x:Name="ButtonFactorial" Content="!" Grid.Row="7" Grid.Column="2" Click="FactorialButton_Click"/>
            <Button x:Name="ButtonPercent" Content="%" Grid.Row="7" Grid.Column="3" Click="PercentButton_Click"/>

            <Button x:Name="ButtonLog" Content="log" Grid.Row="8" Grid.Column="0" Click="LogButton_Click"/>
            <Button x:Name="ButtonLn" Content="ln" Grid.Row="8" Grid.Column="1" Click="LnButton_Click"/>
            <Button x:Name="ButtonPi" Content="π" Grid.Row="8" Grid.Column="2" Click="PiButton_Click"/>
            <Button x:Name="ButtonE" Content="e" Grid.Row="8" Grid.Column="3" Click="EButton_Click"/>

        </Grid>
    </Grid>
</Window>
